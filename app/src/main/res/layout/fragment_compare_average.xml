<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutCompareAverage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.Reports.CompareAverageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarAverageCompare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/AverageConstraint1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/popStatsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="@string/population_statistics"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AverageConstraint3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AverageConstraint4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AverageConstraint5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AverageConstraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AverageConstraint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AverageConstraint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AverageConstraint9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AverageConstraint10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.48" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AverageConstraint8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.95" />

    <TextView
        android:id="@+id/averageStepsAgeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/AverageConstraint2"
        app:layout_constraintEnd_toStartOf="@+id/AverageConstraint4"
        app:layout_constraintStart_toStartOf="@+id/AverageConstraint3"
        app:layout_constraintTop_toTopOf="@+id/AverageConstraint1"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.3"/>

    <TextView
        android:id="@+id/averageStepsAgeGroupLabel"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/averageStepsAgeGroup"
        app:layout_constraintStart_toStartOf="@+id/averageStepsAgeGroup"
        app:layout_constraintTop_toBottomOf="@+id/averageStepsAgeGroup"
        android:gravity="center"/>

    <TextView
        android:id="@+id/youAreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_are"
        app:layout_constraintBottom_toTopOf="@+id/stepDiffAvg"
        app:layout_constraintEnd_toEndOf="@+id/stepDiffAvg"
        app:layout_constraintStart_toStartOf="@+id/stepDiffAvg"
        android:gravity="center"/>

    <TextView
        android:id="@+id/stepDiffAvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/AverageConstraint2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/AverageConstraint4"
        app:layout_constraintTop_toTopOf="@+id/AverageConstraint1"
        app:layout_constraintVertical_bias="0.3"
        android:gravity="center"/>

    <TextView
        android:id="@+id/stepDiffAvgLabel"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/stepDiffAvg"
        app:layout_constraintStart_toStartOf="@+id/stepDiffAvg"
        app:layout_constraintTop_toBottomOf="@+id/stepDiffAvg"
        android:gravity="center"/>

    <TextView
        android:id="@+id/avgWearTimeAus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/AverageConstraint9"
        app:layout_constraintEnd_toStartOf="@+id/AverageConstraint4"
        app:layout_constraintStart_toStartOf="@+id/AverageConstraint3"
        app:layout_constraintTop_toTopOf="@+id/AverageConstraint2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/avgWearTimeAusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/average_wear_time_australia"
        app:layout_constraintEnd_toEndOf="@+id/avgWearTimeAus"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/avgWearTimeAus"
        app:layout_constraintTop_toBottomOf="@+id/avgWearTimeAus"
        android:gravity="center"/>

    <TextView
        android:id="@+id/wearTimeDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/AverageConstraint9"
        app:layout_constraintEnd_toStartOf="@+id/AverageConstraint5"
        app:layout_constraintStart_toStartOf="@+id/AverageConstraint4"
        app:layout_constraintTop_toTopOf="@+id/AverageConstraint2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/wearTimeDiffLabel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/wearTimeDiff"
        app:layout_constraintStart_toStartOf="@+id/wearTimeDiff"
        app:layout_constraintTop_toBottomOf="@+id/wearTimeDiff"
        android:gravity="center"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/averageCompareViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/AverageConstraint8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/AverageConstraint10" />

</androidx.constraintlayout.widget.ConstraintLayout>